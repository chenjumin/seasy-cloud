<assembly>  
    <id>release</id> 
     
    <!-- format: tar.gzï¼Œzip, dir -->   
    <formats>
        <format>dir</format>  
    </formats>
    
    <fileSets>
        <fileSet>  
            <directory>./</directory>  
            <includes>  
                <include>apollo-adminservice.conf</include>
                <include>startup.sh</include>
            </includes>
            <outputDirectory>/</outputDirectory>  
        </fileSet>
        
        <fileSet>  
            <directory>config</directory>    
            <includes>  
                <include>*.properties</include>
                <include>*.yml</include>
            </includes> 
            <outputDirectory>/config</outputDirectory>  
        </fileSet>
        
        <fileSet>  
            <directory>lib</directory>    
            <includes>  
                <include>*.jar</include>
            </includes> 
            <outputDirectory>/</outputDirectory>  
        </fileSet>
    </fileSets>  
</assembly>